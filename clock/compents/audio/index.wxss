/*录音播放*/
@import "../../app.wxss";
.audioBf{
    width: 100%;
    height: 100rpx;
    border:2rpx solid #ddd;
    border-radius: 20rpx; 
    margin-bottom: 10rpx;
    display: flex;
    align-items: center;
    background:#AEBBC4;
    position: relative;
}
.audioBf>.play{
    font-size: 60rpx;
    margin: 0 30rpx ;
    color: #fff;
}
.audioBf>.audio-time{
    font-size: 30rpx;
    color: #fff;
}
.audioBf>.slider_middle{
    width:220rpx;
}
.audioBf>.cross{
    position: absolute;
    top:0;
    right: 0;
    background: #FB4E43;
    border-radius: 50%;
    color: #fff;
}
